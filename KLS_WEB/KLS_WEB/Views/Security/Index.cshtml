@{
    ViewData["Title"] = "Seguridad";
}
<div class="data-content p-4 text-left">
    <div class="">
        <div class="d-flex flex-nowrap">
            <div class="p-2">
                <div class="text-left d-flex">
                    @*<a href="/Catalogs">
                            <div class="material-icons icon-red">arrow_back</div>
                        </a>*@
                    <div class="text-uppercase poppins medium size-24 pl-2">SEGURIDAD</div>
                </div>
            </div>
            <div class="ml-auto p-2">
                <button class="btn btn-sm" onclick="showModal('AGREGAR','Agregar');">
                    <span class="material-icons">
                        add
                    </span>
                </button>
            </div>
        </div>
        <div class="p-4 shadow bg-white">
            <table id="table" class="table table-striped table-bordered display table-hover table-viajes" width="100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>A. paterno</th>
                        <th>A. materno</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th>Estatus</th>
                        <th style="width:3%;" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody id="table-info">
                    <tr>
                        <td colspan="8">Cargando...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!--Modal global-->
    <div class="modal fade" id="modalDiv" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titulo-modal"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-left">
                    <form id="frmRegister" action="#" method="post">
                        <input type="hidden" name="id" id="idEditar" value="" />
                        <div class="row">
                            <div class="col-md-4">
                                <label class="">Nombre</label>
                                <input type="text" class="form-control" name="Nombre" id="Nombre" required />
                            </div>
                            <div class="col-md-4">
                                <label class="">Apellido paterno</label>
                                <input type="text" class="form-control" name="Apaterno" id="Apaterno" required />
                            </div>
                            <div class="col-md-4">
                                <label class="">Apellido Materno</label>
                                <input type="text" class="form-control" name="Amaterno" id="Amaterno" required />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <label class="">Correo</label>
                                <input type="email" class="form-control" name="email" id="email" required />
                            </div>
                            @*<div class="col-md-4">
                                <label class="">Contraseña</label>
                                <input type="text" class="form-control" name="password" id="password" required style="text-transform: none;" />
                            </div>*@
                            <div class="col-md-4">
                                <label class="">Tipo usuario</label>
                                <select class="form-control form-control-sm" id="Rol" name="Rol">
                                    <option value="Admin">Administrador</option>
                                    <option value="Customer">Cliente</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="">Activo</label>
                                <select class="form-control form-control-sm" name="activo" id="activo">
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-dark guardar" style="width:31%;" id="btnAccion">
                            Guardar
                        </button>
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal global-->

    @*cambiar conraseña*@
    <div class="modal fade" id="modalPass" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titulo-modal"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-left">
                    <form id="frmUpdate" action="#" method="post">
                        <input type="hidden" name="id" id="idEditarPass" value="" />
                        <div class="row">
                            <div class="col-md-6">
                                <label>Contraseña</label>
                                <input type="text" class="form-control" id="pass1" required onkeyup="edValueKeyPress()">
                            </div>
                            <div class="col-md-6">
                                <label class="">Repetir contraseña</label>
                                <input type="text" class="form-control" name="passwordR" id="passwordR" required onkeyup="edValueKeyPress()"/>
                                <div class="invalid-feedback">
                                    Las contraseñas no coinciden.
                                </div>
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-dark guardar" style="width:47%;" id="btnAccion" disabled>
                            Actualizar contraseña
                        </button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    @*cambiar conraseña*@
</div>
@section Scripts{
    <script>
        var dataSeguridad = [];
        $(document).ready(function () {
            loadTable();
            $("#frmRegister").submit(function (event) {
                event.preventDefault();
                var jsonData = convertJson($("#frmRegister"));
                if ($("#idEditar").val() != "") {
                    console.log(jsonData);
                } else {
                    $.post("Security/setSecurity", jsonData, function (res) {
                        if (res != null) {
                            dToast("error", res.response.errors[0].errorMessage, "Error");
                        } else {
                            dToast("success", "Usuario registrado exitosamente", "Registrado");
                            $('#frmRegister').trigger("reset");
                            loadTable();
                        }
                    }).fail(function (error, xhr, status) {
                        console.log(xhr);
                    });
                }
            });
        });

        //Kls123!.
        function showModal(titulo = "Title", accion, idEditar = "") {
            $('#frmRegister').trigger("reset");
            $(".guardar").html(accion);
            $("#titulo-modal").empty("");
            $("#titulo-modal").html(titulo);
            $("#idEditar").val(idEditar);
            if (accion == "Editar") {
                try {
                    let indice = dataSeguridad.findIndex(service => service.id_User == idEditar);
                    console.log(dataSeguridad[indice]);
                    $("#Nombre").val(dataSeguridad[indice].nombre);
                    $("#Apaterno").val(dataSeguridad[indice].apaterno);
                    $("#Amaterno").val(dataSeguridad[indice].amaterno);
                    $("#email").val(dataSeguridad[indice].email);
                    $("#Rol").val(dataSeguridad[indice].rol).trigger('change');
                    $("#activo").val(dataSeguridad[indice].activo).trigger('change');
                    $("#modalDiv").modal("show");
                } catch (error) {
                    dToast("error", "Error al tratar de editar, intenta recargar la página.", "Error");
                    $("#modalDiv").modal("hide");
                }
            } else {
                $("#modalDiv").modal("show");
            }
        }
        function loadTable() {
            $.get("Security/getSecurity", function (res) {
                $("#table-info").empty();
                var stable = $('.table-viajes').DataTable();
                stable.destroy();
                $("#table-info").empty();
                dataSeguridad = res;
                let i = 0;
                $.each(res, function (item, key) {
                    i++;
                    $("#table-info").append(`
                         <tr>
                            <td>${i}</td>
                            <td>${nCon(key.nombre)}</td>
                            <td>${nCon(key.apaterno)}</td>
                            <td>${nCon(key.amaterno)}</td>
                            <td>${nCon(key.email)}</td>
                            <td>${nCon(key.rol)}</td>
                            <td>`+ statusTable(key.estatus) + `</td>
                            <td class="text-center">
                                <a href="#">
                                    <span class="material-icons" onclick="showModal('EDITAR','Editar','${nCon(key.id_User)}');">
                                        mode_edit
                                    </span>
                                </a>
                                <a href="#">
                                    <span class="material-icons" onclick="updPass('${nCon(key.id_User)}');">
                                        lock
                                    </span>
                                </a>
                            </td>
                        </tr>`);
                });
                dTable("table-viajes");
            }).fail(function (error) {
                dToast("error", "Error al tratar de obtener los registros, intenta cerrar sesión y volver a iniciar.", "Error");
            });
        }
        function updPass(id) {
            let indice = dataSeguridad.findIndex(service => service.id_User == id);
            $("#idEditarPass").val(dataSeguridad[indice].id_User);
            $("#modalPass").modal("show");
        }

