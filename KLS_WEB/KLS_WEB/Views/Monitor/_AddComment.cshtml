@model KLS_WEB.Models.Clients.DTO.ClientsDTO

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">AGREGAR COMENTARIO MONITOREO</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="frmComentario" onsubmit="event.preventDefault(),setComent()">
                <input type="hidden" name="SectionId" id="Id" value="@Model.Selects.monitoreo.idviaje" />
                <div class="row">
                    <div class="col-md-6">
                        <label>Estatus</label>
                        <select class="form-control form-control-sm" style="width: 200px;" asp-items="Model.Selects.Status" onchange="setsSelect(this.value)" id="StatusId" name=""></select>
                    </div>
                    <div class="col-md-6">
                        <label>Sub Estatus</label>
                        <select class="form-control form-control-sm" style="width: 200px;" name="substatusId" id="subestatusModal"></select>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <label>Comentario</label>
                        <textarea class="form-control" rows="6" id="comentario" name="Comment"></textarea>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <label>Grupo Monitor</label>
                        <input type="text" class="form-control" name="GrupoMonitor"/>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <label>Evidencia</label>
                        <input type="file" class="form-control" name="FileArchivo" id="FileArchivo" accept=".jpg,.png" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary" id="btnComentario" style="width:100%;">Guardar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    var data = @Json.Serialize(Model);
    setsSelect(data.selects.monitoreo.estatusId)
    var bandera = 0;
    function setsSelect(id) {
        $.get("/Monitoring/getSubStatus", function (res) {
            $("#subestatusModal").empty();
            $("#subestatusModal").append(`<option value="0">SELECCIONA UNA OPCION</option>`);
            $.each(res, function (item, key) {
                if (key.statusId == id) {
                    $("#subestatusModal").append(`<option value="${key.id}">${key.name}</option>`);
                }
            });
            if (bandera == 0) {
                $("#subestatusModal").val(data.selects.monitoreo.subestatusId).trigger('change');
            }
            bandera = 1;
        });
    }
    
</script>