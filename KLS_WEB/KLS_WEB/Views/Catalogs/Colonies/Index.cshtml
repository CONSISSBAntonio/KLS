        function loadState() {
            $.get("State/getState", function (res) {
                catEstado = res;
                //console.log(res);
                $("#id_estado").empty();
                $("#id_estado").append(`<option value="0">Seleccionar</option>`);
                $.each(res, function (item, key) {
                    if (key.estatus != 2) {
                        $("#id_estado").append(`<option value="${key.id}">${key.nombre}</option>`);
                    }
                });
                //$("#id_estado").select2();
                dSelect('id_estado');
                loadCity();
            }).fail(function (error) {
                dToast("error", "Error al obtener paises", "Atencion!");
            });
        }
        function loadCity() {
