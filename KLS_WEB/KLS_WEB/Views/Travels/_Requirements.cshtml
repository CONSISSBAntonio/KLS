                    <label class="col-11 col-form-label col-form-label-sm">Llevar SUA en fisico</label>
                </div>
                <div class="form-group row">
                    <div class="col-1">
                        <input type="checkbox" class="custome-check form-control form-control-sm" name="llevarLicencia" @(Model.LlevarLicencia ? "checked" : "") disabled>
