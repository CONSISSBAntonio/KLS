                    <label class="col-11 col-form-label col-form-label-sm">
                        Llevar licencia vigente y en
                        fisico
                    </label>
                </div>
                <div class="form-group row">
                    <div class="col-1">
                        <input type="checkbox" class="custome-check form-control form-control-sm" name="llevarTarjeta" @(Model.LlevarTarjeta ? "checked" : "") disabled>
                    </div>
                    <label class="col-11 col-form-label col-form-label-sm">
                        Llevar tarjeta de circulación de
                        tracto físico
                    </label>
                </div>
                <div class="form-group row">
                    <div class="col-1">
                        <input type="checkbox" class="custome-check form-control form-control-sm" name="llevarCertificado" @(Model.LlevarCertificado ? "checked" : "") disabled>
                    </div>
                    <label class="col-11 col-form-label col-form-label-sm">
