@model PasswordReset

@{
    ViewData["Title"] = "Nueva contraseña";
}

@section Styles{
    <link href="~/css/login.css" rel="stylesheet">
}

<div class="row justify-content-center">
    <!-- Modal -->
    <div class="modal show d-block bg-image" id="login" tabindex="-1" role="dialog" aria-labelledby="login-form" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content pb-4 pt-4">
                <div class="modal-header border-0 d-block text-center pb-0 px-0">
                    <img src="../../img/LogoKLSNET.png" height="40" alt="AP Fiscal" />
                    <h5 class="w-100 modal-title text-center pt-3 size-32 font-barlow text-light-grey">CAMBIAR CONTRASEÑA</h5>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="Login" asp-action="NewPassword">
                        @Html.HiddenFor(x => x.ResetToken)
                        <div class="form-group">
                            <label class="size-14 mt-2 d-block text-left" asp-for="NewPassword">Nueva contraseña</label>
                            <input type="password" asp-for="NewPassword" class="border-0 form-control mb-1 lock pr-4 bottom-border"
                                   autofocus required>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="size-14 mt-2 d-block text-left" asp-for="ConfirmPassword">Confirmar nueva contraseña</label>
                            <input type="password" asp-for="ConfirmPassword" class="border-0 form-control mb-1 lock pr-4 bottom-border"
                                   autofocus required>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="w-100 btn btn-primary btn-center mt-1">Enviar</button>
                        </div>
                    </form>

