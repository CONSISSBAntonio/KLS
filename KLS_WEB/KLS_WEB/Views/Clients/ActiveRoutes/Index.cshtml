            });
            $("#Id_Ruta").select2();
        }

        function selectCiudad() {
            var idEstado = $("#Estado").val();
            $("#Ciudad").empty();
            $("#Ciudad").append(`<option value="0">Selecciona una opción</option>`);
            $.each(catCiudad, function (item, key) {
                if (parseInt(key.id_estado) == parseInt(idEstado)) {
                    $("#Ciudad").append(`<option value="${key.id}">${key.nombre}</option>`);
                }
            });
            $("#Ciudad").select2();
        }

        function showModal(titulo = "Title", accion, idEditar = 0) {
            $('#frmRegister').trigger("reset");
            $(".guardar").html(accion);
            $("#titulo-modal").empty("");
            $("#titulo-modal").html(titulo);
            $("#idEditar").val(idEditar);
            if (accion == "Editar") {
                try {
                    let indice = dataRutas.findIndex(service => service.id === idEditar);
                    let idrutaSel = catRutas.findIndex(service => service.id === dataRutas[indice].id_Ruta);
                    console.log(catRutas[idrutaSel])
                    $('#Estado option[value="' + catRutas[idrutaSel].id_estadoorigen + '"]').attr("selected", true);
                    $("#Estado").change();

                    $('#Ciudad option[value="' + catRutas[idrutaSel].id_ciudadorigen + '"]').attr("selected", true);
                    $("#Ciudad").change();

                    $("#Id_Cliente_Kls").val(dataRutas[indice].id_Cliente_Kls);
                    $('#Monitoreable').prop('checked', dataRutas[indice].monitoreable);
                    $('#Id_Ruta option[value="' + dataRutas[indice].id_Ruta + '"]').attr("selected", true);
                    $("#Id_Ruta").change();
                    $('#Estatus option[value="' + dataRutas[indice].estatus + '"]').attr("selected", true);

                    $("#modalDiv").modal("show");
                } catch (error) {
                    dToast("error", "Error al tratar de editar, intenta recargar la página.", "Error");
                    $("#modalDiv").modal("hide");
                }
            } else {
                $("#modalDiv").modal("show");
            }
        }
        //Catalogos
        function loadCity() {
            $.get("/Catalogs/Geography/City/getCity", function (res) {
                catCiudad = res;
                loadState();
            }).fail(function (error) {
                dToast("error", "Error al obtener paises", "Atencion!");
            });
        }

        //Cargar estados
        function loadState() {
            $.get("/Catalogs/Geography/State/getState", function (res) {
                catEstado = res;
                $.each(res, function (item, key) {
                    $("#Estado").append(`<option value="${key.id}">${key.nombre}</option>`);
                });
                $("#Estado").select2();
                getRutas();
            }).fail(function (error) {
                dToast("error", "Error al obtener paises", "Atencion!");
            });
        }

        function loadTable() {
            var stable = $('.table-viajes').DataTable();
            stable.destroy();
            $("#table-info").empty();
            $.get("/Clients/ActiveRoutes/getRutas", function (res) {
                dataRutas = res;
                $.each(res, function (item, key) {
                    let rutaI = catRutas.findIndex(service => parseInt(service.id) === parseInt(key.id_Ruta));
                    if (rutaI >= 0) {
                        const IdGenerado = `${String(catRutas[rutaI].id_ciudadorigen).padStart(4, '0')}${String(catRutas[rutaI].id_ciudaddestino).padStart(4, '0')}`;
                    let indice_eo = catEstado.findIndex(service => service.id === catRutas[rutaI].id_estadoorigen);
                    let indice_ed = catEstado.findIndex(service => service.id === catRutas[rutaI].id_estadodestino);

                    var check = "";
                    if (key.monitoreable == true) {
                        check = "checked";
                    }

                    $("#table-info").append(`
                             <tr>
                                <td>${IdGenerado}</td>
                                <td>${key.id_Cliente_Kls}</td>
                                <td>${catEstado[indice_eo].id_sepomex}-${catEstado[indice_eo].nombre}</td>
                                <td>${catEstado[indice_ed].id_sepomex}-${catEstado[indice_ed].nombre}</td>
                                <td>${catRutas[rutaI].tiemporuta} Hr</td>
                                <td>
                                    <input type="checkbox" ${check} style="pointer-events:none;">
                                </td>
                                <td>`+ statusTable(key.estatus) + `</td>
                                <td>
                                    <a href="#">
                                        <span class="material-icons" onclick="showModal('EDITAR','Editar',${nCon(key.id)});">
                                            mode_edit
                                        </span>
                                    </a>
                                    <a href="/Clients/Checkpoints/${@id}/${nCon(key.id)}">
                                        <span class="material-icons">
                                            flag
                                        </span>
                                    </a>
                                </td>
                            </tr>`);
                    }
                });
                dTable("table-viajes");
            }).fail(function (error) {
                dToast("error", "Error al tratar de obtener los registros, intenta cerrar sesión y volver a iniciar.", "Error");
            });
        }


    </script>
