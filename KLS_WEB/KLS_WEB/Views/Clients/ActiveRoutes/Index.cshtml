                            $(".guardar").attr("disabled", false);
                        }).fail(function (error) {
                            dToast("error", "Error al tratar de guardar el registro", "Error");
                            $(".guardar").attr("disabled", false);
                        });
                    } else {
                        $.post("/Clients/ActiveRoutes/setRoutes", jsonData, function (res) {
                            loadTable();
                            dToast("success", "Se guardó el registro", "Registrado");
                            $(".guardar").attr("disabled", false);
                            $('#frmRegister').trigger("reset");
                            $("#Estado").change();
                            $("#Ciudad").change();
                            $("#Id_Ruta").change();
                        }).fail(function (error) {
                            dToast("error", "Error al tratar de guardar el registro", "Error");
                            $(".guardar").attr("disabled", false);
                        });
                    }
                } else {
                    dToast("error", "Selecciona una opción", "Error");
                }
            });
        });

