@section Scripts{
    <script>
        var dataLibrary = [];

        $(window).ready(function () {
            loadTable();
            $("#frmRegister").submit(function (event) {
                event.preventDefault();
                var jsonData = convertJson($("#frmRegister"));
                jsonData["Id_Cliente"] = @id;
                jsonData["estatus"] = 1;
                var formData = new FormData(document.getElementById("frmRegister"));
                formData.append('file', $('#FileArchivo')[0].files[0]);
                formData.append('Id_Cliente', @id);

                if (parseInt($("#idEditar").val()) != 0) {
                    $.ajax({
                        url: "/Clients/Library/putLibrary",
                        type: "POST",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            loadTable();
                            dToast("success", "Registro actualizado exitosamente.", "Actualizado");
                            $(".guardar").attr("disabled", false);
                        },
                        error: function (data) {
                            dToast("error", "Ocurrio un error al intentar guardar el archivo.", "Error");
                        }
                    });
                } else {
                    $.ajax({
                        url: "/Clients/Library/setLibrary",
                        type: "POST",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            loadTable();
                            $('#frmRegister').trigger("reset");
                            dToast("success", "Registro guardado exitosamente.", "Registrado");
                            $(".guardar").attr("disabled", false);
                        },
                        error: function (data) {
                            dToast("error", "Ocurrio un error al intentar guardar el archivo.", "Error");
                        }
                    });
                }
            });

        });

        function showModal(titulo = "Title", accion, idEditar = 0) {
            $('#frmRegister').trigger("reset");
            $(".guardar").html(accion);
            $("#titulo-modal").empty("");
            $("#titulo-modal").html(titulo);
            $("#idEditar").val(idEditar);

            $("#archivoF").attr("href", "#")
            $("#archivoF").hide();

            if (accion == "Editar") {
                try {
                    let indice = dataLibrary.findIndex(service => service.id === idEditar);
                    $("#nombre").val(dataLibrary[indice].nombre);
                    $("#Archivo").val(dataLibrary[indice].archivo);
                    $("#Ruta").val(dataLibrary[indice].ruta);
                    //$('#estatus option[value="' + dataLibrary[indice].estatus + '"]').attr("selected", true);
                    if (dataLibrary[indice].archivo != "" && dataLibrary[indice].archivo != null) {
                        let rutaLicencia = `../../Resources/Clientes/Biblioteca/${dataLibrary[indice].ruta}/${dataLibrary[indice].archivo}`;
                        $("#archivoF").show();
                        $("#archivoF").prop("href", rutaLicencia);
                    }

                    $("#modalDiv").modal("show");
                } catch (error) {
                    dToast("error", "Error al tratar de editar, intenta recargar la página.", "Error");
                    $("#modalDiv").modal("hide");
                }
            } else {
                $("#Ruta").val("");
                $("#Archivo").val("");
                $("#modalDiv").modal("show");
            }
        }

        function loadTable() {
            var stable = $('.table-viajes').DataTable();
            stable.destroy();
            $("#table-info").empty();
            $.get("/Clients/Library/getLibrary/", { "Id_Cliente":@id}, function (res) {
                dataLibrary = res;
                console.log(dataLibrary);
                $.each(dataLibrary, function (item, key) {
                    console.log(key);

                    let d = new Date(key.fechaEvento);
                    let fecha = d.getFullYear() + "-" + d.getMonth() + "-" + d.getDay() + "  " + d.getHours() + ":" + d.getMinutes() + ":" + d.getSeconds();
                    if (parseInt(key.estatus)!=2) {
                        $("#table-info").append(`
                             <tr>
                                <td>${nCon(key.nombre)}</td>
                                <td>`+ fecha+ `</td>
                                <td class="text-center">
                                    <a href="#">
                                        <span class="material-icons" style="color:#EC694D;" onclick="downloadFile('${key.archivo}','${key.ruta}')">
                                            cloud_download
                                        </span>
                                    </a>
                                    <a href="#">
                                        <span class="material-icons" onclick="showModal('EDITAR','Editar',${nCon(key.id)});">
                                            mode_edit
                                        </span>
                                    </a>
                                </td>
                            </tr>`);

                    }
                });
                dTable("table-viajes");
            });
        }

        function statusDisponible(status) {
            if (parseInt(status) == 1) {
                return "Disponible";
            } else {
                return "No Disponible";
            }
        }

        function downloadFile(nombre, fullpath) {
            var a = $("<a>")
                .attr("href", "/Resources/Clientes/Biblioteca/" + fullpath +"/"+nombre)
                .attr("download", nombre)
                .appendTo("body");

            a[0].click();
            a.remove();
        }

    </script>
}