@{
    ViewData["Title"] = "Clientes";
}
<div class="data-content p-4 text-left">
    <div class="p-4">

        <div class="d-flex flex-nowrap">
            <div class="p-2">
                <div class="text-left d-flex">
                    <div class="text-uppercase poppins medium size-24">CLIENTES </div>
                </div>
            </div>

            <div class="ml-auto p-2 pb-2">
                <a class="btn btn-sm btn-secondary" href="/Clients/formClients/0">
                    <span class="material-icons">
                        add
                    </span>
                </a>
            </div>
        </div>

        <div class="p-4 shadow bg-white">
            <table id="table" class="table table-striped table-bordered display table-hover table-viajes" width="100%">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre comercial</th>
                        <th>Nombre corto</th>
                        <th>Ejecutivo</th>
                        <th>Comentario</th>
                        <th>Estatus</th>
                        <th style="width:3%;">Acciones</th>
                    </tr>
                </thead>
                <tbody id="table-info"></tbody>
            </table>
        </div>

    </div>
</div>

@section Scripts{
    <script>

       $(document).ready(function (event) {
           loadTable();
       });

       function loadTable() {
           var stable = $('.table-viajes').DataTable();
           stable.destroy();
           $("#table-info").empty();

           $.get("Clients/getClients", function (res) {
               console.log(res);
               $.each(res, function (item, key) {
                   $("#table-info").append(`
                    <tr>
                        <td>${nCon(key.id)}</td>
                        <td>${nCon(key.nombreComercial)}</td>
                        <td>${nCon(key.nombreCorto)}</td>
                        <td>GUSTAVO QA</td>
                        <td>${nCon(key.comentario)}</td>
                        <td>${statusTable(key.estatus)}</td>
                        <td class="text-center">
                            <a href="/Clients/formClients/${nCon(key.id)}" >
                                <span class="material-icons">
                                    search
                                </span>
                            </a>
                        </td>
                    </tr>`);
               });
               dTable("table-viajes");
           }).fail(function (error, xhr, status) {
               dToast("error", "Error al tratar de obtener los registros, intenta cerrar sesión y volver a iniciar.", "Error");
           });
       }
    </script>
} 