@section Scripts{
    <script>
        var dataInventory = [];
        var catUnidad = [];

        $(window).ready(function () {
            loadTipo();
            //loadTable();
            $("#frmRegister").submit(function (event) {
                event.preventDefault();
                var jsonData = convertJson($("#frmRegister"));
                jsonData["IdTransportista"] = @id;
                var formData = new FormData(document.getElementById("frmRegister"));
                formData.append('file', $('#FotoU')[0].files[0]);
                formData.append('file1', $('#FotoP')[0].files[0]);
                formData.append('IdTransportista', @id);

                if (parseInt($("#idEditar").val()) != 0) {
                    $.ajax({
                        url: "/Carriers/Inventory/putInventory",
                        type: "POST",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            loadTable();
                            dToast("success", "Registro actualizado exitosamente.", "Actualizado");
                            $(".guardar").attr("disabled", false);
                        },
                        error: function (data) {
                            dToast("error", "Ocurrio un error al intentar guardar el archivo.", "Error");
                        }
                    });
                } else {
                    $.ajax({
                        url: "/Carriers/Inventory/setInventory",
                        type: "POST",
                        data: formData,
                        contentType: false,
                        processData: false,
                        success: function (data) {
                            loadTable();
                            $('#frmRegister').trigger("reset");
                            dToast("success", "Registro guardado exitosamente.", "registrado");
                            $(".guardar").attr("disabled", false);
                        },
                        error: function (data) {
                            dToast("error", "Ocurrio un error al intentar actualizar el archivo.", "Error");
                        }
                    });
                }
            });
        });

        function showModal(titulo = "Title", accion, idEditar = 0) {
            $("#FotoU").val(null);
            $("#FotoP").val(null);
            $('#frmRegister').trigger("reset");
            $(".guardar").html(accion);
            $("#titulo-modal").empty("");
            $("#titulo-modal").html(titulo);
            $("#idEditar").val(idEditar);

            $("#hFotoU").attr("href", "#")
            $("#hFotoU").hide();

            $("#hFotoP").attr("href", "#")
            $("#hFotoP").hide();


            if (accion == "Editar") {
                try {
                    let indice = dataInventory.findIndex(service => service.id === idEditar);
                    console.log(dataInventory[indice]);
                    $("#Marca").val(dataInventory[indice].marca);
                    $("#Modelo").val(dataInventory[indice].modelo);
                    $("#Anio").val(dataInventory[indice].anio);
                    $("#NoSerie").val(dataInventory[indice].noSerie);
                    $("#NoEconomico").val(dataInventory[indice].noEconomico);
                    $("#Placa").val(dataInventory[indice].placa);
                    $("#Capacidad").val(dataInventory[indice].capacidad);
                    $("#Volumen").val(dataInventory[indice].volumen);
                    $("#Color").val(dataInventory[indice].color);

                    $("#Ruta").val(dataInventory[indice].ruta);
                    $("#FotoUnidad").val(dataInventory[indice].fotoUnidad);
                    $("#FotoPoliza").val(dataInventory[indice].fotoPoliza);

                    $('#Estatus option[value="' + dataInventory[indice].estatus + '"]').attr("selected", true);
                    $('#TipoUnidad option[value="' + dataInventory[indice].tipoUnidad + '"]').attr("selected", true);

                    if (dataInventory[indice].fotoUnidad != "" && dataInventory[indice].fotoUnidad != null) {
                        let rutaLicencia = `../../Resources/Inventario/${dataInventory[indice].ruta}/${dataInventory[indice].fotoUnidad}`;
                        $("#hFotoU").show();
                        $("#hFotoU").prop("href", rutaLicencia);
                    }

                    if (dataInventory[indice].fotoPoliza != "" && dataInventory[indice].fotoPoliza != null) {
                        let rutaLicencia = `../../Resources/Inventario/${dataInventory[indice].ruta}/${dataInventory[indice].fotoPoliza}`;
                        $("#hFotoP").show();
                        $("#hFotoP").prop("href", rutaLicencia);
                    }

                    $("#modalDiv").modal("show");
                } catch (error) {
                    dToast("error", "Error al tratar de editar, intenta recargar la página.", "Error");
                    $("#modalDiv").modal("hide");
                }
            } else {
                $("#Ruta").val("");
                $("#FotoUnidad").val("");
                $("#FotoPoliza").val("");
                $("#modalDiv").modal("show");
            }
        }

        function loadTable() {
            var stable = $('.table-viajes').DataTable();
            stable.destroy();
            $("#table-info").empty();
            $.get("/Carriers/Inventory/getInventory/", { "IdTransportista":@id}, function (res) {
                dataInventory = res;
                $.each(dataInventory, function (item, key) {
