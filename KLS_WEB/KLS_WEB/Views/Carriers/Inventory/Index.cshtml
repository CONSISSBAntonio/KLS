
@{
    ViewData["Title"] = "Transportista|Inventario";
}
@{ int id = ViewBag.id; }

@section Styles{
    <style>
        .disabledbutton {
            pointer-events: none;
            opacity: 0.4;
        }

        input[type="file"] {
            display: none;
            border: 1px solid #ccc;
            display: inline-block;
            cursor: pointer;
            width:100%;
        }
    </style>
}

<div class="data-content p-2 text-left">
    <div class="p-4">
        <div class="d-flex flex-nowrap">
            <div class="p-2">
                <div class="text-left d-flex p-2">
                    <a href="/Carriers/formCarriers/@id">
                        <div class="material-icons icon-red">arrow_back</div>
                    </a>
                    <div class="text-uppercase poppins medium size-24 pl-2">INVENTARIO</div>
                </div>
            </div>

            <div class="ml-auto p-2">
                <button class="btn btn-sm btn-secondary" onclick="showModal('AGREGAR','Agregar');">
                    <span class="material-icons">
                        add
                    </span>
                </button>
            </div>
        </div>

        <div class="p-4 shadow bg-white">
            <div style="overflow-x: auto; overflow-y: hidden;">
                <table id="table" class="table table-striped table-bordered display table-hover table-viajes">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Marca</th>
                            <th>Modelo</th>
                            <th>Año</th>
                            <th># Serie</th>
                            <th># económico</th>
                            <th>Placa</th>
                            <th>Color</th>
                            <th>Tipo de unidad</th>
                            <th>Cap</th>
                            <th>Vol</th>
                            <th>Estatus</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody id="table-info"></tbody>
                </table>
            </div>
        </div>

    </div>
</div>

<!--Modal global-->
<div class="modal fade" id="modalDiv" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo-modal"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-left">
                <form id="frmRegister" action="#" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" id="idEditar" value="0" />
                    <input type="hidden" name="Ruta" id="Ruta" value="" />
                    <input type="hidden" name="FotoUnidad" id="FotoUnidad" value="" />
                    <input type="hidden" name="FotoPoliza" id="FotoPoliza" value="" />

                    <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <label class="">Marca</label>
                                <input type="text" class="form-control" name="Marca" id="Marca" required/>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label class="">Modelo</label>
                            <input type="text" class="form-control" name="Modelo" id="Modelo" required/>
                        </div>

                        <div class="col-md-3">
                            <label class="">Año</label>
                            <input type="text" name="Anio" id="Anio" class="form-control" required/>
                        </div>

                        <div class="col-md-3">
                            <label class=""># serie</label>
                            <input type="text" name="NoSerie" id="NoSerie" class="form-control" required/>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-3">
                            <label class=""># económico</label>
                            <input type="text" class="form-control" name="NoEconomico" id="NoEconomico" required/>
                        </div>
                        <div class="col-md-3">
                            <label class="">Placa</label>
                            <input type="text" class="form-control" name="Placa" id="Placa" required>
                        </div>
                        <div class="col-md-3">
                            <label class="">Color</label>
                            <input type="text" class="form-control" name="Color" id="Color" required>
                        </div>
                        <div class="col-md-3">
                            <label class="">Tipo de Unidad</label>
                            <select class="form-control form-control-sm" name="TipoUnidad" id="TipoUnidad"></select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <label class="">Capacidad</label>
                            <input type="text" class="form-control" name="Capacidad" id="Capacidad" required>
                        </div>

                        <div class="col-md-3">
                            <label class="">Volumen</label>
                            <input type="text" class="form-control" name="Volumen" id="Volumen" required>
                        </div>
                        <div class="col-md-3">
                            <label class="">Estatus</label>
                            <select class="form-control form-control-sm" name="Estatus" id="Estatus">
                                <option value="1">Activo</option>
                                <option value="0">Inactivo</option>
                            </select>
                        </div>
                    </div>
                    <br />
                    <h5>Archivos</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="">Foto de la unidad</label>
                            <input type="file" class="form-control" name="file" id="FotoU" accept=".jpg,.jpeg,.png">

                            <a href="#" download id="hFotoU" style="text-decoration: none !important;">
                                <div class="text-left d-flex pt-2" style="color: #207EEC;">
                                    <div class="material-icons icon-red" style="font-size: 20px; color: #207EEC;">download</div>
                                    <b class="poppins medium size-12 pl-2">Descargar archivo</b>
                                </div>
                            </a>

                        </div>

                        <div class="col-md-6">
                            <label class="">Póliza de seguro</label>
                            <input type="file" class="form-control" name="FotoP" id="FotoP" accept=".jpg,.jpeg,.png">

                            <a href="#" download id="hFotoP" style="text-decoration: none !important;">
                                <div class="text-left d-flex pt-2" style="color: #207EEC;">
                                    <div class="material-icons icon-red" style="font-size: 20px; color: #207EEC;">download</div>
                                    <b class="poppins medium size-12 pl-2">Descargar archivo</b>
                                </div>
                            </a>

                        </div>
                    </div>
                    <br />
                    <button type="submit" class="btn btn-dark guardar" style="width:20%;" id="btnAccion">
                        Guardar
                    </button>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Cerrar</button>
                @*<button type="button" class="btn btn-primary">Save changes</button>*@
            </div>
        </div>
    </div>
</div>
